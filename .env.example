# Environment Variables
NODE_ENV=development
PORT=3000
DEBUG_PORT=9229
SITE_ORIGIN=http://localhost:3000,http://localhost:3001

# Database

# use if you run api inside docker
# DB_HOST=db 
# use if you run api outside docker (i.e. in your system node)
DB_HOST=localhost 

DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=prospero_platform
TYPEORM_LOGGING=true

# Redis
REDIS_PORT=6379

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-123456
JWT_REFRESH_SECRET_KEY=your-super-secret-refresh-key-change-this-in-production-789012
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Password Hashing
BCRYPT_SALT_ROUNDS=8

# OpenVidu livekit
LIVEKIT_URL=https://for-test.click
LIVEKIT_SECRET=your-livekit-secret
LIVEKIT_API_KEY=your-livekit-api-key

# AWS S3 (for recordings)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
S3_BUCKET_NAME=tutor-platform-recordings

